
type Query {
    searchExternalArtist(name:String): ExternalArtistSearchResult
    searchExternalAlbumTracks(albumId:String): [ExternalTrackSearchResult!]!
    artists: ArtistPage!
    albums(artistId:String!): [Album!]
    songs(albumId:String!): [Song!]
    artist(name:String): Artist
    compareToOtherAlbumsBySameArtist(songId:String!, artistId:String!, albumId:String!) : [ComparisonSong!]!
    compareToOtherArtists(songId:String!, artistId:String!) : [ComparisonSong!]!
}

type ExternalArtistSearchResult {
    name:String!
    id:String!
    thumbnail:String
    albums:[ExternalAlbumSearchResult!]!
}

type ExternalAlbumSearchResult {
    id:String!
    name:String!
    thumbnail:String!
    year: Int
}

type ExternalTrackSearchResult {
    id:String!
    name:String!
    trackNumber:Int!
    discNumber:Int!
}
